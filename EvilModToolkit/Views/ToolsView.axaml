<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:EvilModToolkit.ViewModels"
             xmlns:models="using:EvilModToolkit.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EvilModToolkit.Views.ToolsView"
             x:DataType="vm:ToolsViewModel">

    <Design.DataContext>
        <vm:ToolsViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <!-- Header -->
            <TextBlock Text="Tools &amp; Patchers"
                       FontSize="24"
                       FontWeight="Bold" />

            <!-- Tools Grid -->
            <Grid ColumnDefinitions="*,20,*" RowDefinitions="Auto">
                
                <!-- BA2 Archive Patcher Section -->
                <Border Grid.Column="0"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        Padding="15"
                        CornerRadius="5"
                        VerticalAlignment="Top">
                    <StackPanel Spacing="15">
                        <TextBlock Text="BA2 Archive Version Patcher"
                                   FontSize="18"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="Convert BA2 archives between different format versions (v1, v7, v8)"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   TextWrapping="Wrap" />

                        <!-- Mode Toggle -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Mode:" VerticalAlignment="Center" />
                            <RadioButton Content="Directory (Batch)"
                                         IsChecked="{Binding IsDirectoryMode}"
                                         GroupName="BA2Mode" />
                            <RadioButton Content="Single File"
                                         IsChecked="{Binding !IsDirectoryMode}"
                                         GroupName="BA2Mode" />
                        </StackPanel>

                        <!-- Directory Selection (shown when IsDirectoryMode is true) -->
                        <StackPanel Spacing="5" IsVisible="{Binding IsDirectoryMode}">
                            <TextBlock Text="Source Directory:" />
                            <Grid ColumnDefinitions="*,10,Auto">
                                <TextBox Grid.Column="0"
                                         Text="{Binding SourceDirectory}"
                                         Watermark="Select a directory containing BA2 files..."
                                         IsReadOnly="False" />
                                <Button Grid.Column="2"
                                        Content="Browse"
                                        Command="{Binding BrowseSourceDirectoryCommand}" />
                            </Grid>
                            <CheckBox Content="Include subdirectories"
                                      IsChecked="{Binding IncludeSubdirectories}" />
                        </StackPanel>

                        <!-- Single File Selection (shown when IsDirectoryMode is false) -->
                        <StackPanel Spacing="5" IsVisible="{Binding !IsDirectoryMode}">
                            <TextBlock Text="Source BA2 Archive:" />
                            <Grid ColumnDefinitions="*,10,Auto">
                                <TextBox Grid.Column="0"
                                         Text="{Binding SourceBA2Path}"
                                         Watermark="Select a BA2 archive file..."
                                         IsReadOnly="False" />
                                <Button Grid.Column="2"
                                        Content="Browse"
                                        Command="{Binding BrowseSourceBA2Command}" />
                            </Grid>
                        </StackPanel>

                        <!-- Target Version Selection -->
                        <StackPanel Spacing="5">
                            <TextBlock Text="Target Version:" />
                            <ComboBox SelectedItem="{Binding TargetVersion}"
                                      HorizontalAlignment="Stretch"
                                      MinWidth="200">
                                <ComboBoxItem Content="Version 1 (Original Game)" />
                                <ComboBoxItem Content="Version 7" />
                                <ComboBoxItem Content="Version 8 (Next Gen)" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Patch Button -->
                        <Button Content="Patch BA2 Archives"
                                Command="{Binding PatchBA2Command}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="20,8" />

                        <!-- Batch Results Summary -->
                        <Border IsVisible="{Binding LastBatchResult, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"
                                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                Padding="10"
                                CornerRadius="3">
                            <StackPanel Spacing="5">
                                <TextBlock Text="Batch Results:" FontWeight="SemiBold" />
                                <TextBlock>
                                    <Run Text="Total: " />
                                    <Run Text="{Binding LastBatchResult.TotalFiles}" />
                                    <Run Text=" | Patched: " />
                                    <Run Text="{Binding LastBatchResult.SuccessCount}" Foreground="Green" />
                                    <Run Text=" | Skipped: " />
                                    <Run Text="{Binding LastBatchResult.SkippedCount}" Foreground="Orange" />
                                    <Run Text=" | Failed: " />
                                    <Run Text="{Binding LastBatchResult.FailedCount}" Foreground="Red" />
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- XDelta Game Patcher Section -->
                <Border Grid.Column="2"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        Padding="15"
                        CornerRadius="5"
                        VerticalAlignment="Top">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Game File Patcher (XDelta)"
                                   FontSize="18"
                                   FontWeight="SemiBold" />
                        <TextBlock
                            Text="Apply xdelta patches to game files in-place with automatic backup."
                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                            TextWrapping="Wrap" />

                        <!-- Source File -->
                        <StackPanel Spacing="5">
                            <TextBlock Text="Source File to Patch:" />
                            <Grid ColumnDefinitions="*,10,Auto">
                                <TextBox Grid.Column="0"
                                         Text="{Binding SourceFilePath}"
                                         Watermark="Select file (e.g., Fallout4.exe)..."
                                         IsReadOnly="False" />
                                <Button Grid.Column="2"
                                        Content="Browse"
                                        Command="{Binding BrowseSourceFileCommand}" />
                            </Grid>
                        </StackPanel>

                        <!-- Patch File -->
                        <StackPanel Spacing="5">
                            <TextBlock Text="Delta Patch File (.xdelta):" />
                            <Grid ColumnDefinitions="*,10,Auto">
                                <TextBox Grid.Column="0"
                                         Text="{Binding PatchFilePath}"
                                         Watermark="Select patch file..."
                                         IsReadOnly="False" />
                                <Button Grid.Column="2"
                                        Content="Browse"
                                        Command="{Binding BrowsePatchFileCommand}" />
                            </Grid>
                        </StackPanel>

                        <!-- Info about backup -->
                        <TextBlock Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   FontStyle="Italic"
                                   FontSize="12"
                                   TextWrapping="Wrap">
                            <Run Text="ℹ Original file backed up as *_patchBackup" />
                        </TextBlock>

                        <!-- Apply Patch Button -->
                        <Button Content="Apply Patch"
                                Command="{Binding ApplyPatchCommand}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="20,8" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Progress Section -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    Padding="15"
                    CornerRadius="5"
                    IsVisible="{Binding IsBusy}">
                <StackPanel Spacing="10">
                    <TextBlock Text="Operation in Progress"
                               FontSize="16"
                               FontWeight="SemiBold" />
                    <ProgressBar Value="{Binding ProgressPercentage}"
                                 Height="8" />
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource SystemAccentColor}" />
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       IsVisible="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"
                       Foreground="{DynamicResource SystemAccentColor}" />

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"
                       Foreground="Red"
                       TextWrapping="Wrap" />

            <!-- Information Panel -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    Padding="15"
                    CornerRadius="5"
                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
                <StackPanel Spacing="10">
                    <TextBlock Text="ℹ Information"
                               FontSize="16"
                               FontWeight="SemiBold" />
                    <Grid ColumnDefinitions="*,20,*">
                        <TextBlock Grid.Column="0" TextWrapping="Wrap">
                            <Run FontWeight="Bold" Text="BA2 Archive Patcher" />
                            <LineBreak />
                            <Run Text="Converts BA2 archives between format versions. Required when downgrading (v1) or upgrading (v8) game versions." />
                        </TextBlock>
                        <TextBlock Grid.Column="2" TextWrapping="Wrap">
                            <Run FontWeight="Bold" Text="XDelta Patcher" />
                            <LineBreak />
                            <Run Text="Applies binary delta patches to game files in-place. The original file is automatically backed up before patching." />
                        </TextBlock>
                    </Grid>
                    <TextBlock Text="⚠ Warning: Backup files are created automatically, but keep additional backups of critical files!" 
                               FontStyle="Italic" 
                               Foreground="Orange"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>